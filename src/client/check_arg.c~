int	check_arg(int ac, char *av)
{
  if (ac != 2)
    {
      write(2, "Error : The Server PID is Needed\n", 33);
      return (-1);
    }
  if (!av[1])
    {
      write(2 "Error : Empty Arguments\n", 24);
      return (-1);
    }
  return (0)
}
